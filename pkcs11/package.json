{
  "name": "insomnia-plugin-pkcs11",
  "version": "0.0.3",
  "description": "PKCS11 Plugin for Insomnia",
  "main": "app.js",
  "insomnia": {
    "name": "pkcs11",
    "displayName": "pkcs11 Plugin",
    "description": "The pkcs11 plugin enables users to fetch certificates and public keys from HSM USB Tokens via the opensc-pkcs11.so module.",
    "images": {
      "icon": "images/pkcs11_icon.svg",
      "cover": "images/cover.svg"
    },
    "publisher": {
      "name": "Lance Fono",
      "icon": "https://..."
    },
    "unlisted": true
  },
  "scripts": {
    "test": "npm test",
    "copy": "cp ./package.json pkcs11/ && cp ./README.md pkcs11/ && cp -r  ./images pkcs11/ && cp -r node_modules pkcs11/",
    "build": "tsc --build && npm run copy && cd pkcs11 && rm -rf node_modules && npm install --omit=dev"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lankke/insomnia-plugin-pkcs11.git"
  },
  "keywords": [
    "pkcs11",
    "usb",
    "hsm",
    "node",
    "js"
  ],
  "author": "Lance Fono",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lankke/insomnia-plugin-pkcs11/issues"
  },
  "homepage": "https://github.com/lankke/insomnia-plugin-pkcs11#readme",
  "dependencies": {
    "pkcs11js": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "typescript": "^4.9.5"
  }
}
